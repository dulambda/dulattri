.accordion-horizontal {
  display: flex;
  width: 100%;
  height: 400px;
  overflow: hidden;
}

.accordion-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  transition: flex-basis 0.5s ease;
  position: relative;
  background: #ccc;
  cursor: pointer;
}

.accordion-header {
  padding: 1rem;
  background: #555;
  color: #fff;
  text-align: center;
}

.accordion-content {
  width: 0;
  overflow: hidden;
  transition: width 0.5s ease;
  background: #eee;
  flex-grow: 1;
  padding: 1rem;
  box-sizing: border-box;
}

.accordion-item.active .accordion-content {
  width: 100%;
}

.accordion-item.active {
  flex: 3;
}

/* –ú–æ–±–∏–ª—å–Ω–∞—è –≤–µ—Ä—Å–∏—è */
@media (max-width: 768px) {
  .accordion-horizontal {
    flex-direction: column;
    height: auto;
  }

  .accordion-item {
    flex: unset;
    width: 100%;
  }

  .accordion-content {
    width: 100%;
    height: 0;
    transition: height 0.4s ease;
  }

  .accordion-item.active .accordion-content {
    height: auto;
  }
}

const items = document.querySelectorAll('.accordion-item');

items.forEach(item => {
  item.addEventListener('click', () => {
    items.forEach(i => i.classList.remove('active'));
    item.classList.add('active');
  });
});
  

